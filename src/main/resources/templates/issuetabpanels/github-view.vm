<ul class="github">
    #if ($github.hasFeed())
    #foreach ($entry in $github.getFeed())
        #if ($entry.isError())
        <li><div class="notify error">$entry.getText()</div></li>
        #elseif ($entry.isComment())
        <li class="comment">
            #if ($entry.getGravatar())
            <img class="gravatar" src="$github.getGravatarUrl($entry)">
            #end
            <abbr class="date" title="$entry.getDate()">$entry.getRelativeDate()</abbr>
            $entry.getText()
        </li>
        #else
        <li>
            #if ($entry.getGravatar())
            <img class="gravatar" src="$github.getGravatarUrl($entry)">
            #end
            Commit <a href="$entry.url"><abbr class="sha"> $entry.getShortSha()</abbr></a>
            in <a href="$entry.getRepoUrl()">$entry.repo</a>
            <abbr class="date" title="$entry.getDate()">$entry.getRelativeDate()</abbr>
            <blockquote>$entry.getText()</blockquote>
        </li>
    #end
    #end
    #else
        <li><div class="notify">No commits found</div></li>
    #end

</ul>
